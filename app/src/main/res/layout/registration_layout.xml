<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registration_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:layout_editor_absoluteY="25dp">


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/registration_id"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:hint="输入一个用户名"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        app:met_baseColor="@color/colorText"
        app:met_clearButton="true"
        app:met_errorColor="@color/colorError"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="ID"
        app:met_floatingLabelTextColor="@color/colorText"
        app:met_floatingLabelTextSize="20dp"
        app:met_primaryColor="@color/colorEditText"
        app:met_textColorHint="@color/colorHint" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/registration_password"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="364dp"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:met_baseColor="@color/colorText"
        app:met_clearButton="true"
        app:met_errorColor="@color/colorError"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Password"
        app:met_floatingLabelTextColor="@color/colorText"
        app:met_floatingLabelTextSize="20dp"
        app:met_primaryColor="@color/colorEditText"
        app:met_textColorHint="@color/colorHint" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/registration_password_repeat"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:hint="重复一次密码"
        android:inputType="textPassword"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:met_baseColor="@color/colorText"
        app:met_clearButton="true"
        app:met_errorColor="@color/colorError"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Repeat Password"
        app:met_floatingLabelTextColor="@color/colorText"
        app:met_floatingLabelTextSize="20dp"
        app:met_primaryColor="@color/colorEditText"
        app:met_textColorHint="@color/colorHint" />

    <android.support.design.button.MaterialButton
        android:id="@+id/button_sign"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:background="@color/grey"
        android:text="注册"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.758" />

</android.support.constraint.ConstraintLayout>